<% include ../partials/header.ejs %>
    <div class="container "style=" background-color: #f5f5f5;
                background: -moz-linear-gradient(bottom, #f5f5f5 30%, gray 70%);
                background: -o-linear-gradient(bottom, #f5f5f5 30%, gray 70%);
                background: -ms-linear-gradient(bottom, #f5f5f5 30%, gray 70%);
                background: -webkit-gradient(linear,left bottom,left top,color-stop(0.3, #f5f5f5),color-stop(0.7, gray));
                color:white;
                margin-top: 2.5rem!important;" >
            <div class="row ">
            <form class="rounded mx-auto d-block border m-5 p-3" action="/user/login" method="POST">
                <div class="h2 text-center ">Login</div>
                 <div class="form-group col-md-12 text-center ">
                        <% if(hashErrors){ %>
                            <div class="alert alert-danger"> <%= messages %> </div>
                        <% }%>
                    </div>
                <div class="form-row mt-5">
                    <div class="form-group col-md-12">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
                    </div>
                    <div class="form-group col-md-12">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                <button type="submit" class="btn btn-primary rounded mx-auto d-block">Login</button>
            </form>
        </div>
    </div>
<% include ../partials/footer.ejs %>
